record(bo, "$(P)$(R):RST")
{
    field(DESC, "SCPI Reset")
    field(DTYP, "stream")
    field(OUT,  "@asynRecord.proto cmd(*RST) $(PORT) $(ADDR)")
}

record(bo, "$(P)$(R):CLS")
{
    field(DESC, "SCPI Clear status")
    field(DTYP, "stream")
    field(OUT,  "@asynRecord.proto cmd(*CLS) $(PORT) $(ADDR)")
}


